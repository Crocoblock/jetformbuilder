{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "https://raw.githubusercontent.com/Crocoblock/jetformbuilder/dev/custom-render-states/assets/schemas/actions.flow.schema.json",
	"type": "array",
	"items": {
		"type": "object",
		"properties": {
			"type": {
				"type": "string"
			},
			"conditions": {
				"type": "array"
			},
			"events": {
				"type": "array"
			}
		},
		"required": [
			"type"
		],
		"allOf": [
			{
				"if": {
					"properties": {
						"type": {
							"const": "send_email"
						}
					}
				},
				"then": {
					"properties": {
						"settings": {
							"$ref": "#/definitions/send_email"
						}
					}
				}
			},
			{
				"if": {
					"properties": {
						"type": {
							"const": "reset_password"
						}
					}
				},
				"then": {
					"properties": {
						"settings": {
							"$ref": "#/definitions/reset_password"
						}
					}
				}
			}
		]
	}
}